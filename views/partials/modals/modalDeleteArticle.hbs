<td>

  <!-- MODAL SUPPRESSION ARTICLE -->
  <div
    class="modal fade"
    id="deleteArticle{{ articles.id }}"
    tabindex="-1"
    aria-labelledby="deleteArticleLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteArticleLable">Êtes vous sûr de
            vouloir supprimer cet article ?</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body text-dark">
          Suppression de : {{ this.title }}
        </div>
        <div class="modal-footer">
          <form action="/deleteOneArt/{{ this.id }}?_method=DELETE" method="post">
            <button
              type="button"
              class="btn btn-danger"
              data-bs-dismiss="modal"
            >Annuler</button>
            <button type="submit" class="btn btn-success">Appliquer</button>
          </form>

        </div>
      </div>
    </div>
  </div>
</td>