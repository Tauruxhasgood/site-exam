<div
  class="modal fade"
  id="modalDelete{{this.id}}"
  tabindex="-1"
  aria-labelledby="modalDeleteLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalDeleteLabel">Êtes vous sûr de vouloir
          supprimer cet utilisateur ?</h5>
        <button
          type="submit"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body text-dark">
        Suppression de :
        {{this.name}}
      </div>
      <div class="modal-footer">
        <form action="/deleteOne/{{this.id}}?_method=DELETE" method="post">
          <button
            type="button"
            class="btn btn-danger"
            data-bs-dismiss="modal"
          >Annuler</button>
          <button type="submit" class="btn btn-success">Appliquer</button>
        </form>
      </div>
    </div>
  </div>
</div>