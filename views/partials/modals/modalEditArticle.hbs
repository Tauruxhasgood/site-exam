<td>
    <!-- Modal -->
    {{!-- MODAL Modif ARTICLE --}}
    <div class="modal fade"
         id="editArticle{{ articles.id }}"
         tabindex="-1"
         aria-labelledby="editArticleLabel"
         aria-hidden="true">

        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"
                        id="editArticleLable">Modification</h5>
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!--FORMULAIRE DE REPONSE -->
                    <section class="container-fluid" id="contactForm">

                        <div class="container  fw-bold pt-2 pb-3">
                            {{!-- TITRE REPONSE MESSAGE --}}
                            <div class="col-md-12 text-center">
                                <h2 class=" fw-bolder text-primary rounded  text-dark  pb-1 ">
                                    Modifier l'article
                                </h2>
                            </div>
                            {{!-- FORMULAIRE REPONSE MESSAGE --}}
                            <form action="/editArticle/{{ this.id }}?_method=PUT" method="post" enctype="multipart/form-data" class=" pt-3 row pe-2 border-top border-primary">
                                {{!-- input destinataire --}}
                                <div class="col-md-12 pt-5">
                                    <label for="artImage">Image de l'article</label>
                                    <input type="file"
                                           name="imgArticle"
                                           id="artImage">
                                </div>

                                <div class="col-md-12 pt-5">
                                    <label for="title" class="form-label text-primary">Titre de l'article</label>
                                    <input type="text"
                                           name="title"
                                           class="form-control bg-light text-dark"
                                           id="artTitre"
                                           value="{{ articles.title }}">
                                </div>

                                {{!-- input sujet --}}
                                <div class="col-12 ">
                                    <label for="artDescription"
                                            class="form-label text-primary">Description:</label>
                                    <input type="text"
                                           name="description"
                                           class="form-control bg-light text-dark"
                                           id="description"
                                           value="{{ articles.description }}">
                                </div>
                                {{!-- input message --}}
                                <div class="col-12 ">
                                    <label for="artContenu"
                                           class="form-label text-dark">Contenu:</label>

                                    <textarea name="content"
                                              class="form-control bg-light text-dark"
                                              id="artContenu"
                                              cols="30"
                                              rows="10"
                                              >{{ articles.content }}</textarea>
                                </div>
                                {{!-- cgu --}}
                                <div class="col-6 pt-4 justify-content-end">
                                    <div class="form-check">
                                        <input type="checkbox"
                                               class="form-check-input "
                                               id="check"
                                               required>

                                        <label for="check"
                                               class="form-check-label text-dark">
                                               J'accepte les
                                               <span class="text-primary">
                                               <a href="/">CGU</a></span>!
                                        </label>
                                    </div>
                                </div>
                                {{!-- bouton send --}}
                                <div class="col-6 d-flex pt-4 justify-content-end pb-2">
                                    <button type="submit"
                                            class="btn bg-dark  fw-bolder text-white">Appliquer</button>
                                </div>
                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    <div>
</td>