<!-- MODAL APPLIQUER LES MODIFS -->
<div class="modal fade" id="modalModifyComment{{ this.id }}" tabindex="-1" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modifiez le commentaire</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form class="text-center" method="POST" action="/comment/{{ this.id }}?_method=PUT">
                <div class="modal-body text-dark">
                    <div class="modal-body text-dark">
                        Modification de : {{ this.title }}
                    </div>

                    <div>
                        <label for="content">Contenu :</label>
                        <textarea name="content" 
                                  class="form-control bg-light text-dark" 
                                  id="commentContenu" 
                                  cols="30" 
                                  rows="10"
                                  >{{ comments.content }}</textarea>
                        {{!-- <input type="text" value="{{ this.content }}" name="content" required> --}}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Annuler</button>
                        <button type="submit" class="btn btn-primary">Modifier</button>
                    </div>
            </form>

        </div>
    </div>
</div>