


<table class="table table-sm table-bordered">
    {{!-- LEGENDE TABLEAU --}}
    <thead>
        <tr>
            <th scope="col">#id</th>
            <th scope="col">Titre du commentaire</th>
            <th scope="col">Titre de l'article</th>
            <th scope="col">Contenu</th>
            <th scope="col">Auteur</th>
            <th scope="col">Supprimer</th>
            <th scope="col">Modifier</i></th>
        </tr>
    </thead>
    {{!-- CONTENU DU TABLEAU --}}
    <tbody>
        {{#each userComments}}
        <tr>
            <th scope="row">{{ this.id }}</th>
            <td>{{ this.title }}</td>
            <td>{{ article.title}}</td>
            <td>{{ this.content }}</td>
            <td>{{ this.name }}</td>
            <td>
                <button type="button" 
                        class="btn btn-danger px-3" 
                        data-bs-toggle="modal"
                        data-bs-target="#modalDeleteComments{{ this.id }}">
                        <i class="far fa-trash-alt"></i>
                </button>
            </td>
            <td><button type="button" 
                        class="btn btn-primary" 
                        data-bs-toggle="modal"
                        data-bs-target="#modalModifyComment{{ this.id }}">
                        <i class="far fa-edit"></i>
                </button>
            </td>
            {{> users/modals/modalDeleteComments comment=this }}
            {{> users/modals/modalModifyComment comments=this }}
        </tr>
        {{/each }}
    </tbody>
</table>