{{! <tbody> }}
{{!-- {{#each userID}} --}}
<div
  class="tab-pane container-fluid active"
  id="monCompte"
  role="tabpanel"
  aria-labelledby="monCompte-tab"
>
    <form
    action="/userAccount/{{userID.id}}?_method=PUT"
    enctype="multipart/form-data"
    method="POST"
    >
        <div class="d-flex justify-content-center row">
            {{!-- <div class="mb-3">
                            <h1 class="text-dark pt-4 text-center">Mon Compte</h1>
                            INPUT FULLNAME
                            <label for="name" class="form-label fw-bold">Nom Complet:</label>
                            <input type="text" class="form-control" value="{{ userID.name }}" name='name'
                                id="name" aria-describedby="none" required />
                        </div> --}}
            <div class="mb-3">
                {{! INPUT NICKNAME }}
                <label for="nickname" class="form-label fw-bold">Pseudo:</label>
                <input
                    type="text"
                    class="form-control"
                    value="{{userID.name}}"
                    name="name"
                    id="name"
                    aria-describedby="none"
                    required
                />
            </div>
            <div class="mb-3">
                {{! INPUT EMAIL }}
                <label for="email" class="form-label fw-bold">Email:</label>
                <input
                    type="email"
                    class="form-control"
                    value="{{userID.email}}"
                    name="email"
                    id="email"
                    aria-describedby="none"
                    required
                />
            </div>

            <div class="col-md-6">
                <label for="image" class="pb-2 fw-bold">Selectionnez une image de profil
                    :</label>
                <input type="file" name="imageAvatar" id="" />
                <img
                    src="{{userID.avatar}}"
                    class="rounded-pill"
                    height="90px"
                    alt=""
                />
            </div>
            <div class="col-md-12 mb-6">
                <button class="btn btn-primary" type="submit">Appliquer les
                    modifications</button>
            </div>
        </div>
    </form>

    
        
    <form action="/userChangePassword/{{userID.id}}?_method=PUT" method="POST">
        <div class="mt-3 mb-6 d-flex justify-content-center row">
        {{! INPUT CHANGE PASSWORD }}
            <div class="mb-3">
                <label class="fw-bold" for="password">Nouveau mot de passe :
                </label>
                <input
                    type="password"
                    class="form-control pb-2"
                    value=""
                    name="newPassword"
                    id="NewPassword"
                    aria-describedby="none"
                />
            </div>
            <div class="mb-3">
                <label class="fw-bold" for="passConfirm">Confirmez mot de passe:</label>
                <input
                    type="password"
                    class="form-control pb-2"
                    value=""
                    name="passwordConfirm"
                    id="passwordConfirm"
                    aria-describedby="none"
                />
            </div>
            <div>
                <class class="col-md-12">
                <button class="btn btn-primary" type="submit">Appliquer les modifications</button>
            </div>
        </div>
    </form>
    
    <div>
        <div class="col-md-6">
            <button
            type="button"
            data-bs-toggle="modal"
            class="btn btn-sm btn-danger"
            data-bs-target="#modalDeleteAccount"
            >Supprimer mon compte</button>
        </div>
    {{!-- {{> account/modal/modalDeleteAccount user=userID }} --}}
    </div>
</div>
{{!-- {{/each}} --}}
{{! </tbody> }}